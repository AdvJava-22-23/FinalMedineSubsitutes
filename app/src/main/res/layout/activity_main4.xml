<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screenshot1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here I will ask you a couple questions and depending on your responses of Yes or No I will determine which herb can best suit your needs. "
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="times" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/yesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="34dp"
        android:backgroundTint="@color/material_dynamic_neutral_variant40"
        android:text="Yes" />

    <Button
        android:id="@+id/noButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionTextView"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="152dp"
        android:layout_toStartOf="@id/yesButton"
        android:backgroundTint="@color/material_dynamic_neutral_variant40"
        android:text="No" />

    <TextView
        android:id="@+id/recommendedHerbTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yesButton"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#000000"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="650dp"
        android:layout_centerHorizontal="true"
        android:padding="9dp"
        android:text="Next Page"
        android:textSize="15sp" />
</RelativeLayout>

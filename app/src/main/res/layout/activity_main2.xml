<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".context"
    android:background="@drawable/bluebackground"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Modern Medicine"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_height="152dp"
        app:srcCompat="@drawable/medicine" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:padding="30dp"
        android:text="In recent decades, the use of Modern Medicine to cure long term diseases to common colds
has taken off in modern American society. What citizens aren't aware of is that millions of people suffer from problems such as insomnia, chronic pain, and problems with mental health. Pharmaceutical companies create products that do more harm than good with side effects such as addiction, heart issues, fatigue, nausea and overall causes a decrease in the quality of life they live. There are however solutions to overcome the side effects of allowing large pharmaceutical companies to control us and that solution lies in taking a step back to traditional medicine."
        android:textColor="@color/black" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#000000"
        android:fontFamily="sans-serif-black"
        android:padding="5dp"
        android:text="next page"
        android:textSize="14sp" />


</LinearLayout>